{
    "title": "Title goes here...",
    "description": "Description goes here...",
    "method": [
        {
            "type": "action",
            "name": "Name goes here...",
            "provider": {
                "type": "python",
                "module": "chaosgarden.k8s.actions",
                "func": ...,
                "secrets": ["k8s"],                     # may be set and must then refer to secrets authenticating against the cluster or...; field name free
                                                        # can be omitted and then the env var `$KUBECONFIG` is implicitly used to access the cluster
                "arguments": {
                    ...
                }
            }
        }
    ],
    "secrets": {
        "k8s": {
            "kubeconfig_struct": {...}                  # You can hand in the full struct or...
            "kubeconfig_file": "/.../kubeconfig.yaml"   # ...the path to the kubeconfig file or...
            "kubeconfig_envvar": "..."                  # ...the env var that points to such a file
        }
    }
}
