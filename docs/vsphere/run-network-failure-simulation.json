{
    "title": "Title goes here...",
    "description": "Description goes here...",
    "method": [
        {
            "type": "action",
            "name": "run_network_failure_simulation",
            "provider": {
                "type": "python",
                "module": "chaosgarden.vsphere.actions",
                "func": "run_network_failure_simulation",
                "secrets": ["cloud_provider"],           # must refer to secrets authenticating against cloud provider; field name free
                "arguments": {
                    "mode": "total",                     # keep `total` (default) or replace with `ingress` or `egress`
                    "zone": "${vsphere_zone}",           # can be inline, but we recommend variable substitution; field/var name free
                    "filters": "${vsphere_filters}"      # can be inline, but we recommend variable substitution; field/var name free
                    "duration": 60                       # replace with time in seconds this action shall run
                }
            }
        }
    ],
    "rollbacks": [
        {
            "type": "action",
            "name": "rollback-network-failure-simulation",
            "provider": {
                "type": "python",
                "module": "chaosgarden.vsphere.actions",
                "func": "rollback_network_failure_simulation",
                "secrets": ["cloud_provider"],                        # must refer to secrets authenticating against cloud provider; field name free
                "arguments": {
                    "mode": "total",                                  # keep `total` (default) or replace with `ingress` or `egress`
                    "zone": "${vsphere_zone}",                        # can be inline, but we recommend variable substitution; field/var name free
                    "filters": "${vsphere_filters}"                   # can be inline, but we recommend variable substitution; field/var name free
                }
            }
        }
    ],    
    "configuration": {
        "vsphere_vcenter_server": "...",                          # replace with your vSphere server hostname or IP;    field name free
        "vsphere_vcenter_insecure": false,                        # set to true, if TLS server certficate verification should be skipped
        "vsphere_nsxt_server": "...",                             # replace with your NSXT-T server hostname or IP;    field name free
        "vsphere_next_insecure": false,                           # set to true, if TLS server certficate verification should be skipped
        "vsphere_zone": "rot-lab-dell-1a",                        # replace with your zone;    field name free
        "vsphere_filters": {                                      # replace with your filters; field name free
            "instances": {
                "custom_attributes": {"mcm.gardener.cloud/cluster": "shoot--project--cluster"}, # replace with your custom attributes;    field name free
                "resource_pools": ["gardener-staging-{zone}"],                                  # replace with your resource pool(s) (either resource pools or clusters are required);    field name free
                "clusters": [],                                                                 # replace with your cluster(s) (either resource pools or clusters are required);    field name free
            }
        }
    },
    "secrets": {
        "cloud_provider": {
            "vsphereUsername": "...",
            "vspherePassword": "...",
            "nsxtPassword": "...",
            "nsxtUsername": "...",
        }
    }
}